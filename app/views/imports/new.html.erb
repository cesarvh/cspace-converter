<div class="row">

  <%= render partial: 'shared/sidebar' %>

  <div class="col-md-10">
    <%= render partial: 'shared/alerts' %>
    <%= render partial: 'shared/title', :locals => { :title => 'Import' } %>

    <div class="row">
      <div class="col-md-12">

        <%= form_tag('import', multipart: true, id: 'import') do %>
          <p>Converter Module: <%= converter_module %></p>
          <hr/>
          <div class="form-group row">
            <label for="batch" class="col-md-2 form-control-label">Batch</label>
            <div class="col-md-10">
              <%= text_field_tag 'batch', nil, placeholder: 'Enter a batch name ...', class: 'form-control', required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label for="profile" class="col-md-2 form-control-label">Profile</label>
            <div class="col-md-10">
              <%= select_tag "profile", options_for_select(profiles, disabled: disabled_profiles), class: "c-select" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="file" class="col-md-2 form-control-label">File</label>
            <div class="col-md-10">
              <label class="file">
                <%= file_field_tag 'file', required: true %>
              </label>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
              <%= submit_tag 'Upload', class: 'btn btn-secondary' %>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>

</div>
