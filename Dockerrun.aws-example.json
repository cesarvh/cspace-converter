{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "mongo",
      "image": "mongo:3.2",
      "essential": true,
      "memory": 768
    },
    {
      "name": "converter",
      "image": "lyrasis/cspace-converter",
      "environment": [
        {
          "name": "CSPACE_CONVERTER_ASYNC_JOBS",
          "value": "true"
        },
        {
          "name": "CSPACE_CONVERTER_DB_HOST",
          "value": "mongo"
        },
        {
          "name": "CSPACE_CONVERTER_BASE_URI",
          "value": "INSERT_YOUR_VALUE_HERE"
        },
        {
          "name": "CSPACE_CONVERTER_DOMAIN",
          "value": "INSERT_YOUR_VALUE_HERE"
        },
        {
          "name": "CSPACE_CONVERTER_LOG_LEVEL",
          "value": "debug"
        },
        {
          "name": "CSPACE_CONVERTER_MODULE",
          "value": "Core"
        },
        {
          "name": "CSPACE_CONVERTER_USERNAME",
          "value": "INSERT_YOUR_VALUE_HERE"
        },
        {
          "name": "CSPACE_CONVERTER_PASSWORD",
          "value": "INSERT_YOUR_VALUE_HERE"
        }
      ],
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "links": [
        "mongo"
      ]
    }
  ]
}
